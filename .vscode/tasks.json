{
  "tasks": [
    {
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/D_DEBUG",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "/utf-8"
      ],
      "command": "cl.exe",
      "detail": "调试器生成的任务。",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "C/C++: cl.exe 生成活动文件",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "type": "cppbuild"
    }
  ],
  "version": "2.0.0"
}
